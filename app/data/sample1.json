{
	"title" : "ユーザー登録",
	"helpImage" : "/assets/images/help.png",
	"items": {
		"lastname": {
			"label" : "姓",
			"type": "text",
			"rules" : {
				"required": true,
				"maxlength": 10
			},
			"attrs": {
				"class" : "input-mini",
				"size" : 5,
				"placeholder" : "姓"
			}
		},
		"firstname": {
			"label" : "名",
			"type": "text",
			"rules" : {
				"required": true,
				"maxlength": 10
			},
			"attrs" : {
				"class" : "input-mini",
				"size" : 5,
				"placeholder" : "名"
			},
			"follow" : true
		},
		"mail": {
			"label" : "E-Mail",
			"type": "text",
			"rules" : {
				"required": true,
				"maxlength": 256,
				"email" : true
			},
			"class" : "input-xlarge",
			"size" : 40
		},
		"password": {
			"label": "パスワード",
			"type": "password",
			"required": true,
			"alphanum": true,
			"minlength": 6,
			"maxlength": 16,
			"helpText" : "6文字以上16文字以下の英数で設定してください。"
		},
		"password_confirm": {
			"label": "パスワード(確認)",
			"type": "password",
			"rules" : {
				"equalTo": "password"
			}
		},
		"birthday": {
			"label": "誕生日",
			"type": "date",
			"min" : "1900-01-01"
		}
	}
}
